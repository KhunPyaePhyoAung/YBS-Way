<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle background -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/primary" />
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

    <!-- Icon centered -->
    <item
        android:width="65dp"
        android:height="65dp"
        android:drawable="@drawable/ic_launcher_plain"
        android:gravity="center" />
</layer-list>
