<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle background -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/bus_stop_fill" />
            <stroke
                android:width="0.1dp"
                android:color="@color/bus_stop_border"
                >
            </stroke>
            <size
                android:width="4dp"
                android:height="4dp"/>
        </shape>
    </item>

    <!-- Icon centered -->
    <item
        android:width="2dp"
        android:height="2dp"
        android:drawable="@drawable/bus_stop_vector"
        android:gravity="center" />
</layer-list>
