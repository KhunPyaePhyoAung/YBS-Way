<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom|center_horizontal"
    android:padding="16dp"
    android:background="@color/nav_header_bg">

    <ImageView
        android:layout_width="@dimen/nav_icon_size"
        android:layout_height="@dimen/nav_icon_size"
        android:src="@drawable/ic_launcher_plain"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/nav_header_title"
        android:textAppearance="@style/AppFont"
        android:textSize="@dimen/nav_header_size"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_sub_title"
        android:textColor="@color/nav_header_sub_title"
        android:textAppearance="@style/AppFont"
        android:textSize="@dimen/nav_sub_header_size"/>

</LinearLayout>