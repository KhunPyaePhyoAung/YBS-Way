<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <!-- Bubble box -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_info_bubble"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:textColor="@color/bus_stop_info_bubble_text"
            android:textStyle="bold"
            android:textSize="@dimen/bus_stop_info_window_name_text_size"
            android:textAppearance="@style/AppFont"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/township"
            android:textColor="@color/bus_stop_info_bubble_text"
            android:textSize="@dimen/bus_stop_info_window_street_text_size"
            android:textAppearance="@style/AppFont"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/street"
            android:textColor="@color/bus_stop_info_bubble_text"
            android:textSize="@dimen/bus_stop_info_window_township_text_size"
            android:textAppearance="@style/AppFont"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Arrow below bubble -->
    <View
        android:layout_width="@dimen/bus_stop_info_window_arrow_size"
        android:layout_height="@dimen/bus_stop_info_window_arrow_size"
        android:background="@drawable/bg_info_arrow"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
