<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMarginStart="@dimen/toolbar_title_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:navigationIcon="@drawable/toolbar_back_arrow"
        app:navigationContentDescription="@string/toolbar_back_button_description"
        android:background="@color/primary">
    </androidx.appcompat.widget.Toolbar>

    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/floating_button_container_margin_bottom"
        android:layout_marginEnd="@dimen/floating_button_margin_end"
        app:layout_constraintEnd_toEndOf="@id/map_view"
        app:layout_constraintBottom_toBottomOf="@id/map_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/zoom_btn_group_bg"
            android:padding="@dimen/btn_zoom_group_padding"
            android:elevation="10dp"
            android:layout_marginBottom="@dimen/floating_button_margin_bottom">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_zoom_in"
                android:layout_width="@dimen/btn_zoom_size"
                android:layout_height="@dimen/btn_zoom_size"
                android:background="@drawable/btn_zoom_in_bg_states"
                android:src="@drawable/icon_btn_zoom_in"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_zoom_out"
                android:layout_width="@dimen/btn_zoom_size"
                android:layout_height="@dimen/btn_zoom_size"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_zoom_out_bg_states"
                android:src="@drawable/icon_btn_zoom_out"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_gps"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="10dp"
            android:background="@drawable/gps_button_background_states"
            android:scaleType="fitXY"
            android:src="@drawable/gps_button_icon_states"/>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_bus_stop_list_height"
            app:cardCornerRadius="@dimen/bottom_sheet_bus_stop_list_corner_radius"
            app:cardElevation="20dp"
            app:strokeColor="@color/bottom_sheet_bus_stop_list_border"
            app:strokeWidth="0.5dp"
            app:cardBackgroundColor="@color/bottom_sheet_bus_stop_list_bg"
            app:behavior_hideable="false"
            app:behavior_peekHeight="@dimen/bottom_sheet_bus_stop_list_peek_height"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sheet_state_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/bottom_sheet_bus_stop_list_title_bg">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_sheet_arrow_drop"
                        android:layout_width="@dimen/bottom_sheet_bus_stop_list_arrow_drop_size"
                        android:layout_height="@dimen/bottom_sheet_bus_stop_list_arrow_drop_size"
                        android:src="@drawable/arrow_drop_up" />

                    <TextView
                        android:id="@+id/bottomSheetHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/bottom_sheet_bus_stop_list_title"
                        android:textSize="@dimen/bottom_sheet_bus_stop_list_title_size"
                        android:textStyle="bold"
                        android:textColor="@color/bottom_sheet_bus_stop_list_title_text_color"
                        android:textAppearance="@style/AppFont"
                        android:gravity="center"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_bus_stop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>