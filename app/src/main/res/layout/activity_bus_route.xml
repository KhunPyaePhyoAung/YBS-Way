<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleMarginStart="@dimen/toolbar_title_margin_start"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="20dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:navigationIcon="@drawable/toolbar_back_arrow"
            app:navigationContentDescription="@string/toolbar_back_button_description"
            android:background="@color/primary">
        </androidx.appcompat.widget.Toolbar>

        <org.osmdroid.views.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            app:layout_constraintVertical_bias="0.0" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/zoom_btn_group_bg"
            android:padding="@dimen/btn_zoom_group_padding"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/btn_gps"
            app:layout_constraintStart_toStartOf="@id/btn_gps"
            app:layout_constraintEnd_toEndOf="@id/btn_gps"
            android:layout_marginBottom="@dimen/floating_button_margin_bottom">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_zoom_in"
                android:layout_width="@dimen/btn_zoom_size"
                android:layout_height="@dimen/btn_zoom_size"
                android:background="@drawable/btn_zoom_in_bg_states"
                android:src="@drawable/icon_btn_zoom_in"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_zoom_out"
                android:layout_width="@dimen/btn_zoom_size"
                android:layout_height="@dimen/btn_zoom_size"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_zoom_out_bg_states"
                android:src="@drawable/icon_btn_zoom_out"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_gps"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/floating_button_margin_bottom"
            android:layout_marginEnd="@dimen/floating_button_margin_end"
            android:background="@drawable/gps_button_background_states"
            android:scaleType="fitXY"
            android:src="@drawable/gps_button_icon_states"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
