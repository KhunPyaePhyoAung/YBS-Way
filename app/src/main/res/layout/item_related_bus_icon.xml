<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/icon_bg"
    android:layout_width="@dimen/dialog_related_bus_item_col_width"
    android:layout_height="@dimen/dialog_related_bus_item_col_width"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/bus_icon_background_round">

    <TextView
        android:id="@+id/tv_bus_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_related_bus_item_name"
        android:textColor="@color/bus_list_item_name"
        android:textAppearance="@style/AppFont"
        />

    <ImageView
        android:id="@+id/iv_bus_icon"
        android:layout_width="@dimen/dialog_related_bus_item_icon"
        android:layout_height="@dimen/dialog_related_bus_item_icon"
        android:layout_gravity="center"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_bus_sub_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:layout_gravity="center|bottom"
        android:background="@drawable/bus_icon_sub_name_bg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_related_bus_item_sub_name"
        android:textAppearance="@style/AppFont"
        android:textColor="@color/bus_list_item_sub_name"
        android:singleLine="true"
        />
</FrameLayout>

